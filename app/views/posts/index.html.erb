<h1>Listing Posts</h1>
 
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
<%= link_to 'New Post', new_post_path %>
<p></p>
<table>
  <tr>
    <th>Post</th>
 
  </tr>

  <% @posts.each do |post| %>
    <tr>
    
      <td><%= post.pbody %></td>
      <td><%= link_to 'Show   ', post_path(post) %></td>
      <td><%= link_to 'Edit Post  ', edit_post_path(post) %></td> 
      <td><%= link_to 'Destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      
    </tr>
  <% end %>
</table>

<body style="background-color:rgb(255,150,150)"></body>